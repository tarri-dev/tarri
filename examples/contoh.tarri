_nama = ["Ketut", "Made", "Wayan", "Komang"]
_alamat = ["Denpasar", "Gianyar", "Tabanan", "Singaraja"]

titikawal {
    cetak "=== Daftar Nama & Alamat ==="

    # nested loop: nama dipasangkan dengan alamat
    untuk i dalam [0,1,2,3] {
        cetak (i + 1) + ". " + _nama[i] + " - " + _alamat[i]
    }

    cetak "----------------------"

    # contoh looping bersarang
    cetak "=== Tabel Perbandingan Nama & Alamat ==="
    untuk n dalam _nama {
        untuk a dalam _alamat {
            cetak "- " + n + " <> " + a
        }
    }

    cetak "=== Selesai menampilkan daftar ==="
}


