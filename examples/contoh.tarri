fungsi cekGenap(n) {
    jika n % 2 == 0 {
        cetak "{n} adalah genap"
    } lainnya {
        cetak "{n} adalah ganjil"
    }
}

titikawal{
    cekGenap(7)
    cekGenap(10)
}
