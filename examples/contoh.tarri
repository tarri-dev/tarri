_cuaca = "cerah"
_waktu = "pagi"
_daftar_kegiatan = ["menulis", "membaca", "berjalan kaki"]

fungsi sapa(nama) {
    kembalikan "Halo, " + nama + "!"
}

fungsi rekomendasi(cuaca, waktu) {
    jika cuaca == "cerah" dan waktu == "pagi" {
        kembalikan "Pagi cerah! Saatnya olahraga ringan."
    } jika cuaca == "cerah" dan waktu == "sore" {
        kembalikan "Sore cerah. Waktu yang bagus untuk jalan santai."
    } jika cuaca == "hujan" {
        kembalikan "Hujan turun. Mungkin lebih baik di rumah."
    } lainnya {
        kembalikan "Kondisi tidak terdefinisi, tetap semangat!"
    }
}

titikawal {
    cetak "=== Program Tarri Advanced ==="

    # panggil fungsi dan cetak hasilnya
    cetak sapa("Ketut")
    cetak rekomendasi(_cuaca, _waktu)

    cetak "Daftar kegiatan hari ini:"
    untuk kegiatan dalam _daftar_kegiatan {
        cetak "- " + kegiatan
    }

    cetak "Hitung mundur:"
    untuk i dalam [5,4,3,2,1] {
        cetak "..." + i
    }

    cetak "Program selesai dijalankan."
}


