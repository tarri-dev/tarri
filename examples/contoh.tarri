fungsi faktorial(n) {
    jika n <= 1 {
        kembalikan 1
    } lainnya {
        kembalikan n * faktorial(n - 1)
    }
}

titikawal{
    cetak "faktorial dari 5 adalah " + faktorial(5)
}


